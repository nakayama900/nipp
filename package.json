{
  "name": "nipp",
  "version": "0.13.2-SNAPSHOT",
  "description": "Mini Application Hosted on URL",
  "private": true,
  "scripts": {
    "copy-opal": "copyfiles opal-cdn/opal/current/*.min.js public",
    "copy-lzma": "copyfiles node_modules/lzma/src/lzma_worker-min.js public",
    "copy-babel": "copyfiles node_modules/@babel/standalone/babel.min.js public",
    "copy-scripts": "npm run copy-opal && npm run copy-lzma && npm run copy-babel",
    "serve": "npm run copy-scripts && vue-cli-service serve",
    "build": "npm run copy-scripts && vue-cli-service build",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "vue-cli-service test:unit",
    "nipp-test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha --require ts-node/register --timeout 10000 tests/integration/**/*.ts",
    "test:integration": "npm run build && npm run nipp-test",
    "deploy": "npm run build && gh-pages -m '[AUTO] Upload pages' -d dist -a"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nwtgck/nipp.git"
  },
  "author": "Ryo Ota <nwtgck@gmail.com> (https://github.com/nwtgck)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nwtgck/nipp/issues"
  },
  "homepage": "https://github.com/nwtgck/nipp#readme",
  "dependencies": {
    "@babel/standalone": "^7.4.3",
    "core-js": "^2.6.5",
    "lzma": "^2.3.2",
    "monaco-editor": "^0.16.2",
    "pako": "^1.0.10",
    "purecss": "^1.0.0",
    "register-service-worker": "^1.6.2",
    "ua-device-detector": "^1.1.5",
    "vue": "^2.6.6",
    "vue-class-component": "^7.0.2",
    "vue-monaco": "^0.3.1",
    "vue-property-decorator": "^8.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.0",
    "@types/express": "^4.16.1",
    "@types/ip": "^1.1.0",
    "@types/mocha": "^5.2.4",
    "@types/node": "^10.14.4",
    "@types/pako": "^1.0.1",
    "@types/power-assert": "^1.5.0",
    "@types/selenium-webdriver": "^3.0.16",
    "@vue/cli-plugin-babel": "^3.6.0",
    "@vue/cli-plugin-pwa": "^3.6.0",
    "@vue/cli-plugin-typescript": "^3.6.0",
    "@vue/cli-plugin-unit-mocha": "^3.6.0",
    "@vue/cli-service": "^3.6.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "chai": "^4.1.2",
    "copyfiles": "^2.1.0",
    "express": "^4.16.4",
    "get-port": "^5.0.0",
    "gh-pages": "^2.0.1",
    "typescript": "^3.4.4",
    "ip": "^1.1.5",
    "mocha": "^6.0.0",
    "monaco-editor-webpack-plugin": "^1.7.0",
    "power-assert": "^1.6.1",
    "selenium-webdriver": "^3.3.0",
    "ts-node": "^8.0.1",
    "vue-template-compiler": "^2.5.21",
    "webpack": "^4.30.0"
  }
}
